<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,initial-scale=1.0">
<title>‚ö† SYSTEM LOCKED</title>
<link href="https://fonts.googleapis.com/css2?family=Share+Tech+Mono&display=swap" rel="stylesheet">
<style>
body{
  margin:0;padding:0;
  font-family:'Share Tech Mono',monospace;
  background:#000; /* pure black */
  color:#fff;
  display:flex;flex-direction:column;align-items:center;justify-content:center;
  height:100vh;overflow:hidden;text-align:center;
  position:relative;
}

.lock{
  font-size:10rem;
  margin-bottom:20px;
  animation:glowPulse 1.5s infinite;
  text-shadow:0 0 20px #ff3b3b,0 0 50px #ff7700;
}

h1{
  font-size:5rem;
  letter-spacing:10px;
  margin-bottom:20px;
  color:#ff1a1a;
  animation:glitch 1.5s infinite,flicker 2s infinite;
  text-shadow:0 0 8px #ff3b3b,0 0 15px #ff7700,0 0 30px #ff0000;
}

.typewriter{
  display:inline-block;
  white-space:nowrap;
  overflow:hidden;
  width:0;
  font-size:1.5rem;
  color:#fff;
  margin-bottom:30px;
  animation:typing 6s steps(80,end) forwards;
  position:relative;
}

.typewriter::after{
  content:'|';
  display:inline-block;
  margin-left:2px;
  animation:blink 0.8s step-end infinite;
}

.contact{
  font-size:1.5rem;
  font-weight:bold;
  background:linear-gradient(90deg,#00d4ff,#ff00ff,#ff0077,#00ff77);
  background-size:300% 100%;
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
  animation: shimmer 4s linear infinite;
  text-shadow:0 2px 8px rgba(0,0,0,0.5);
}

.scanlines{
  position:absolute;inset:0;
  background:repeating-linear-gradient(
    0deg,
    rgba(255,255,255,0.03),
    rgba(255,255,255,0.03) 2px,
    transparent 2px,
    transparent 4px
  );
  pointer-events:none;
  mix-blend-mode:overlay;
  opacity:0.5;
}

canvas{
  position:absolute;top:0;left:0;width:100%;height:100%;pointer-events:none;z-index:-2;
}

/* Keyframes */
@keyframes glowPulse{
  0%,100%{transform:scale(1);text-shadow:0 0 20px #ff3b3b,0 0 50px #ff7700;}
  50%{transform:scale(1.1);text-shadow:0 0 60px #ff3b3b,0 0 80px #ff7700;}
}
@keyframes glitch{
  0%{text-shadow:2px 0 red,-2px 0 cyan;}20%{text-shadow:-2px 0 red,2px 0 cyan;}
  40%{text-shadow:2px 2px red,-2px -2px cyan;}60%{text-shadow:-2px -2px red,2px 2px cyan;}
  80%{text-shadow:2px -2px red,-2px 2px cyan;}100%{text-shadow:none;}
}
@keyframes flicker{
  0%,19%,21%,23%,25%,54%,56%,100%{opacity:1;}
  20%,22%,24%,55%{opacity:0.3;}
}
@keyframes typing{from{width:0;} to{width:100%;}}
@keyframes blink{50%{border-color:transparent;}}
@keyframes shimmer{0%{background-position:-200px 0;}100%{background-position:200px 0;}}
</style>
</head>
<body>
<canvas id="particles"></canvas>
<div class="scanlines"></div>

<div class="lock">üîí</div>
<h1 id="headline">*** ACCESS DENIED ***</h1>
<div class="typewriter" id="typewriter"></div>

<script>
// PARTICLES
const canvas=document.getElementById('particles');
const ctx=canvas.getContext('2d');
let w=canvas.width=window.innerWidth;
let h=canvas.height=window.innerHeight;

const particles=[];
for(let i=0;i<300;i++){
  particles.push({x:Math.random()*w,y:Math.random()*h,r:Math.random()*2+0.5,speed:Math.random()*0.5+0.1});
}

function animate(){
  ctx.clearRect(0,0,w,h);
  for(let p of particles){
    p.y-=p.speed;
    if(p.y<0)p.y=h;
    ctx.fillStyle='rgba(255,255,255,0.08)';
    ctx.beginPath();ctx.arc(p.x,p.y,p.r,0,Math.PI*2);ctx.fill();
  }
  requestAnimationFrame(animate);
}
animate();
window.addEventListener('resize',()=>{w=canvas.width=window.innerWidth;h=canvas.height=window.innerHeight;});

// TYPEWRITER + CORRUPTION
const message="This system has been locked. Unauthorized access is strictly prohibited.";
const typoEl=document.getElementById('typewriter');
function randInt(min,max){return Math.floor(Math.random()*(max-min+1))+min;};
function corrupt(ch){const symbols="‚ñà‚ñì‚ñí‚ñë‚ñå‚ñê@#$%&*?<>/\\|~^";return symbols[randInt(0,symbols.length-1,)]}

async function typeWriter(text,el){
  el.textContent="";
  for(let i=0;i<text.length;i++){
    el.textContent+=text[i];
    if(Math.random()<0.15 && el.textContent.length>2){
      const idx=randInt(0,el.textContent.length-1);
      const arr=Array.from(el.textContent);
      const original=arr[idx];
      arr[idx]=corrupt(original);
      el.textContent=arr.join('');
      await new Promise(r=>setTimeout(r,randInt(30,100)));
      arr[idx]=original;
      el.textContent=arr.join('');
    }
    await new Promise(r=>setTimeout(r,randInt(20,50)));
  }
}
typeWriter(message,typoEl);
setInterval(()=>{typeWriter(message,typoEl);},13000);

// HEADLINE GLITCH JITTER
const headline=document.getElementById('headline');
setInterval(()=>{
  if(Math.random()<0.35){
    headline.style.transform=`translate(${randInt(-12,12)}px,${randInt(-8,8)}px) rotate(${randInt(-2,2)}deg)`;
    setTimeout(()=>{headline.style.transform='translate(0,0)';},randInt(50,150));
  }
},500);
</script>
</body>
</html>
