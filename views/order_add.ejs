<%- include('./partials/header') %>

<main>
    <section class="view-section">
        <h1>주문 추가</h1>
        <% if (req.query.ok) { %>
            <p style="color:green;">주문이 저장되었습니다.</p>
        <% } %>
        <form action="/order/add" method="post" class="order-form">
            <label>주문 게이트웨이:
                <select name="gateway">
                    <option value="Cafe24">Cafe24</option>
                    <option value="Smartstore">Smartstore</option>
                </select>
            </label><br>
            <label>주문자명: <input type="text" name="customer" required></label><br>
            <label>전화번호: <input type="text" name="phone"></label><br>
            <label>주소: <input type="text" name="address"></label><br>
            <label>거래상품(콤마로 구분): <input type="text" name="items" placeholder="상품A,상품B"></label><br>
            <label>메모: <input type="text" name="memo"></label><br>
            <button class="btn-primary" type="submit">저장</button>
        </form>
    </section>
</main>

<%- include('./partials/footer') %>
