
<h1>Assets</h1>
<p><a class="btn" href="/assets/new">New Asset</a></p>
<table class="table">
  <thead><tr><th>ID</th><th>Name</th><th>Category</th><th>Purchase</th><th>Price</th><th>Value</th><th>Actions</th></tr></thead>
  <tbody>
  <% items.forEach(item => { %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.category %></td>
      <td><%= item.purchase_date ? item.purchase_date.toISOString().slice(0,10) : '' %></td>
      <td><%= Number(item.purchase_price).toLocaleString() %></td>
      <td><%= Number(item.current_value).toLocaleString() %></td>
      <td>
        <a href="/assets/<%= item.id %>/edit">Edit</a>
        <form method="post" action="/assets/<%= item.id %>/delete" style="display:inline">
          <button onclick="return confirm('Delete?')">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
  </tbody>
</table>
