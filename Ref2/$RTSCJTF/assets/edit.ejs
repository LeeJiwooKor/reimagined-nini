
<h1>Edit Asset</h1>
<form method="post" action="/assets/<%= item.id %>/edit">
  <label>Name</label><input name="name" value="<%= item.name %>" required/>
  <label>Category</label><input name="category" value="<%= item.category %>" />
  <label>Purchase Date</label><input type="date" name="purchase_date" value="<%= item.purchase_date ? item.purchase_date.toISOString().slice(0,10) : '' %>" />
  <label>Purchase Price</label><input name="purchase_price" type="number" step="0.01" value="<%= item.purchase_price %>" />
  <label>Current Value</label><input name="current_value" type="number" step="0.01" value="<%= item.current_value %>" />
  <label>Notes</label><textarea name="notes"><%= item.notes %></textarea>
  <button>Save</button>
</form>
