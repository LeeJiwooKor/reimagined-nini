
<h1>Edit Account</h1>
<form method="post" action="/accounts/<%= item.id %>/edit">
  <label>Name</label><input name="name" value="<%= item.name %>" required/>
  <label>Type</label>
  <select name="type">
    <option value="bank" <%= item.type==='bank'?'selected':'' %>>bank</option>
    <option value="card" <%= item.type==='card'?'selected':'' %>>card</option>
    <option value="investment" <%= item.type==='investment'?'selected':'' %>>investment</option>
    <option value="cash" <%= item.type==='cash'?'selected':'' %>>cash</option>
  </select>
  <label>Balance</label><input name="balance" type="number" step="0.01" value="<%= item.balance %>" />
  <label>Currency</label><input name="currency" value="<%= item.currency %>" />
  <button>Save</button>
</form>
